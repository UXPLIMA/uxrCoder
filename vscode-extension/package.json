{
    "name": "uxrcoder",
    "displayName": "uxrCoder",
    "description": "Real-time synchronization between Roblox Studio and VS Code",
    "version": "1.1.0",
    "publisher": "UXPLIMA",
    "license": "MIT",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/UXPLIMA/uxrCoder"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "keywords": [
        "roblox",
        "roblox-studio",
        "luau",
        "lua",
        "sync",
        "game-development"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "uxrCoder",
            "properties": {
                "robloxSync.serverUrl": {
                    "type": "string",
                    "default": "ws://127.0.0.1:34872",
                    "description": "WebSocket URL of the uxrCoder server"
                },
                "robloxSync.autoConnect": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically connect to the sync server on startup"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "robloxSync",
                    "title": "Roblox",
                    "icon": "$(symbol-misc)"
                }
            ]
        },
        "views": {
            "robloxSync": [
                {
                    "id": "robloxExplorer",
                    "name": "Explorer",
                    "icon": "$(list-tree)",
                    "contextualTitle": "Roblox Explorer"
                },
                {
                    "id": "robloxProperties",
                    "name": "Properties",
                    "type": "webview",
                    "icon": "$(symbol-property)"
                },
                {
                    "id": "robloxClassBrowser",
                    "name": "Class Browser",
                    "type": "webview",
                    "icon": "$(book)"
                }
            ]
        },
        "commands": [
            {
                "command": "robloxSync.connect",
                "title": "Connect to Server",
                "category": "uxrCoder",
                "icon": "$(plug)"
            },
            {
                "command": "robloxSync.disconnect",
                "title": "Disconnect from Server",
                "category": "uxrCoder",
                "icon": "$(debug-disconnect)"
            },
            {
                "command": "robloxSync.refresh",
                "title": "Refresh Explorer",
                "category": "uxrCoder",
                "icon": "$(refresh)"
            },
            {
                "command": "robloxSync.insertObject",
                "title": "Insert Object",
                "category": "uxrCoder",
                "icon": "$(add)"
            },
            {
                "command": "robloxSync.delete",
                "title": "Delete",
                "category": "uxrCoder",
                "icon": "$(trash)"
            },
            {
                "command": "robloxSync.rename",
                "title": "Rename",
                "category": "uxrCoder",
                "icon": "$(edit)"
            },
            {
                "command": "robloxSync.copyPath",
                "title": "Copy Path",
                "category": "uxrCoder",
                "icon": "$(clippy)"
            },
            {
                "command": "robloxSync.copyInstance",
                "title": "Copy",
                "category": "uxrCoder",
                "icon": "$(copy)"
            },
            {
                "command": "robloxSync.pasteInstance",
                "title": "Paste Into",
                "category": "uxrCoder",
                "icon": "$(clippy)"
            },
            {
                "command": "robloxSync.openScript",
                "title": "Open Script",
                "category": "uxrCoder",
                "icon": "$(file-code)"
            },
            {
                "command": "robloxSync.play",
                "title": "Play",
                "category": "uxrCoder",
                "icon": "$(play)"
            },
            {
                "command": "robloxSync.run",
                "title": "Run",
                "category": "uxrCoder",
                "icon": "$(run)"
            },
            {
                "command": "robloxSync.stop",
                "title": "Stop",
                "category": "uxrCoder",
                "icon": "$(stop)"
            },
            {
                "command": "robloxSync.build",
                "title": "Build Project to .rbxlx",
                "category": "uxrCoder",
                "icon": "$(package)"
            },
            {
                "command": "robloxSync.exportModel",
                "title": "Export to .rbxmx",
                "category": "uxrCoder",
                "icon": "$(export)"
            },
            {
                "command": "robloxSync.regenerateSourcemap",
                "title": "Regenerate Sourcemap",
                "category": "uxrCoder",
                "icon": "$(refresh)"
            },
            {
                "command": "robloxSync.wallyInit",
                "title": "Wally: Initialize",
                "category": "uxrCoder",
                "icon": "$(file-add)"
            },
            {
                "command": "robloxSync.wallyInstall",
                "title": "Wally: Install Packages",
                "category": "uxrCoder",
                "icon": "$(cloud-download)"
            },
            {
                "command": "robloxSync.seleneInit",
                "title": "Selene: Initialize",
                "category": "uxrCoder",
                "icon": "$(file-code)"
            },
            {
                "command": "robloxSync.seleneLint",
                "title": "Selene: Lint Project",
                "category": "uxrCoder",
                "icon": "$(beaker)"
            },
            {
                "command": "robloxSync.styluaInit",
                "title": "StyLua: Initialize",
                "category": "uxrCoder",
                "icon": "$(settings)"
            },
            {
                "command": "robloxSync.styluaFormat",
                "title": "StyLua: Format Project",
                "category": "uxrCoder",
                "icon": "$(paintcan)"
            },
            {
                "command": "robloxSync.generateGitignore",
                "title": "Git: Generate .gitignore",
                "category": "uxrCoder",
                "icon": "$(git-merge)"
            },
            {
                "command": "robloxSync.initProject",
                "title": "Project: Initialize",
                "category": "uxrCoder",
                "icon": "$(rocket)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "robloxSync.connect",
                    "when": "view == robloxExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "robloxSync.play",
                    "when": "view == robloxExplorer && robloxSync.isConnected",
                    "group": "navigation@2"
                },
                {
                    "command": "robloxSync.stop",
                    "when": "view == robloxExplorer && robloxSync.isConnected",
                    "group": "navigation@3"
                },
                {
                    "command": "robloxSync.refresh",
                    "when": "view == robloxExplorer",
                    "group": "navigation@4"
                },
                {
                    "command": "robloxSync.build",
                    "when": "view == robloxExplorer",
                    "group": "navigation@5"
                }
            ],
            "view/item/context": [
                {
                    "command": "robloxSync.insertObject",
                    "when": "view == robloxExplorer",
                    "group": "1_modification@1"
                },
                {
                    "command": "robloxSync.rename",
                    "when": "view == robloxExplorer",
                    "group": "1_modification@2"
                },
                {
                    "command": "robloxSync.delete",
                    "when": "view == robloxExplorer",
                    "group": "1_modification@3"
                },
                {
                    "command": "robloxSync.copyPath",
                    "when": "view == robloxExplorer",
                    "group": "2_clipboard@1"
                },
                {
                    "command": "robloxSync.copyInstance",
                    "when": "view == robloxExplorer",
                    "group": "2_clipboard@2"
                },
                {
                    "command": "robloxSync.pasteInstance",
                    "when": "view == robloxExplorer",
                    "group": "2_clipboard@3"
                },
                {
                    "command": "robloxSync.openScript",
                    "when": "view == robloxExplorer && viewItem == script",
                    "group": "0_open@1"
                },
                {
                    "command": "robloxSync.exportModel",
                    "when": "view == robloxExplorer",
                    "group": "modification@4"
                }
            ],
            "explorer/context": [
                {
                    "command": "robloxSync.wallyInstall",
                    "when": "resourceFilename == wally.toml",
                    "group": "uxrCoder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "npm run compile && node -e \"console.log('No VS Code extension tests are configured yet.')\"",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "package": "vsce package"
    },
    "dependencies": {
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.85.0",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "@vscode/vsce": "^2.22.0"
    }
}
